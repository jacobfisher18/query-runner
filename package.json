{
  "name": "sql-client",
  "description": "A desktop SQL client application.",
  "version": "0.2.0",
  "author": "Jacob Fisher",
  "main": "public/electron.js",
  "repository": "https://github.com/jacobfisher18/query-runner",
  "homepage": "./",
  "scripts": {
    "start-dev-server": "cross-env BROWSER=none react-scripts start",
    "start-dev-app": "wait-on http://localhost:3000 && electron .",
    "start": "concurrently \"npm run start-dev-server\" \"npm run start-dev-app\"",
    "build": "react-scripts build && cp public/icon.png build",
    "dist": "electron-builder --mac --publish always"
  },
  "dependencies": {
    "@codemirror/lang-sql": "^0.19.4",
    "@mantine/core": "^4.0.6",
    "@mantine/hooks": "^4.0.6",
    "@mantine/notifications": "^4.0.6",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@uiw/react-codemirror": "^4.5.1",
    "codemirror": "^5.65.2",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.3.0",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "re-resizable": "^6.9.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-query": "^3.34.16",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
    "@types/codemirror": "^5.60.5",
    "@types/lodash": "^4.14.179",
    "@types/styled-components": "^5.1.21",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.13",
    "wait-on": "^6.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.electron.jacobfisher18.sql-client",
    "productName": "SQL Client",
    "mac": {
      "category": "development",
      "icon": "build/icon.png",
      "publish": [
        "github"
      ]
    }
  }
}
